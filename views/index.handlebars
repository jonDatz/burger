<h1>Burgers!</h1>

<h2>Burgers that are available!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    <p>{{burger_name}}</p>
    <button class="change-devour" data-id="{{id}}" data-state="1">Eat!</button>
    <button class="remove-burger" data-id="{{id}}">X</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    <p>{{burger_name}}</p>
    <button class="change-devour" data-id="{{id}}" data-state="0">Bring it Back</button>
    <button class="remove-burger" data-id="{{id}}">X</button>

  </li>

  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>